            android:name="com.google.android.gms.location.places.ui.PlaceAutocompleteFragment"
            />
        <Button
            android:id="@+id/btnRoutesSearch"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_gravity="bottom"
